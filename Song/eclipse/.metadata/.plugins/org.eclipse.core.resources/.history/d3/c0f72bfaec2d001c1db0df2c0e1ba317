public class Prac_SongLoader  {


    public void loadFile(String csvFilePath) throws FileNotFoundException {
        // TODO Auto-generated method stub
    	List<List<String>> lF = new LinkedList();
    	BufferedReader br = null;
    	
    	br = Flies.newBufferedReader(Paths.get(csvFilePath));
    	
    	String line ="";
    	
    	while ((line = br.readLine()) != null) {
    		List<String>tmpList = new LinkedList<String>();
    		String array[] = line.split(",");
    		tmpList = Arrays.asList(array);
    		System.out.println(tmpList);
    		lF.add(tmpList);
    		
    	}
    	br.close();
       //return null;
    }


    public void loadAllFilesInDirectory(String directoryPath) throws FileNotFoundException {
        // TODO Auto-generated method stub
    	
    	File file = new File(directoryPath);
    	
    	String[] fileList = file.list();
    	
    	System.out.println(fileList[0]);
    	System.out.println(fileList[1]);
    	System.out.println("******************");
    	
    	List<String> File_list = new LinkedList();
    	
    	for (String name : fileList)
    	{
    		String tmp;
    		tmp=directoryPath+"\\"+name;
    		File_list.add(tmp);
    		System.out.println(tmp);
    	}
    	
    
    	
        //return File_list;
    }
    	
 
               
