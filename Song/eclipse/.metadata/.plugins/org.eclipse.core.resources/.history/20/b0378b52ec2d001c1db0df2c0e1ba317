public class Prac_SongLoader  {


    public void loadFile(String csvFilePath) throws FileNotFoundException {
        // TODO Auto-generated method stub
    	List<List<String>> lF = new LinkedList();
    	BufferedReader br = null;
    	
    	br = Flies.newBufferedReader(Paths.get(csvFilePath));
    	
    	String line ="";
    	
    	while ((line = br.readLine()) != null) {
    		List<String>tmpList = new LinkedList<String>();
    		String array[] = line.split(",");
    		tmpList = Arrays.asList(array);
    		System.out.println(tmpList);
    		lF.add(tmpList);
    		
    	}
    	br.close();
       //return null;
    }


    public List loadAllFilesInDirectory(String directoryPath) throws FileNotFoundException {
        // TODO Auto-generated method stub
    	
    	File dir = new File(directoryPath);
    	File files[] =dir.listFiles();
    	List<String> File_list = new LinkedList();
    	
    	for (int i =0; i<files.length;i++) {
    		//System.out.println("file : "+files[i]);
    		String str_f = FileUtils.readFileToString(files[i]);
    		File_list.add(str_f);
    	}
    	
        return File_list;
    }
    	
 
               
        public static void main(String args[]) throws IOException {
        	
        	Prac_SongLoader A = new Prac_SongLoader();        	
        	String k = "C:\\Users\\yoonc\\Desktop\\lecture note\\CS 400\\homework\\Song\\data";
        	List b = new LinkedList();
